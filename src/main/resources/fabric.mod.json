	"description": "This mod adds three wind chimes that sway in the wind and occasionally ring. Designed to compliment the vanilla game, this mod has no settings that can be set.",
	"authors": [
		"Hibi"
	],
	"contact": {
		"homepage": "https://hibiii.github.io/mods/windchimes",
		"sources": "https://github.com/Hibiii/Windchimes",
		"issues": "https://github.com/Hibiii/Windchimes/issues"
	},

	"license": "Unlicense",
	"icon": "assets/windchimes/icon.png",

	"environment": "*",
	"entrypoints": {
		"main": [
			"hibiii.windchimes.Initializer"
		],
		"client": [
			"hibiii.windchimes.ClientInitializer"
		]
	},
	"depends": {
		"fabric": "*",
		"minecraft": ">=1.19"
	},
	"custom": {
		"modmenu": {
			"links": {
				"modmenu.github_releases": "https://github.com/Hibiii/Windchimes/releases/",
